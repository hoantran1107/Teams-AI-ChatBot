{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "version": "1.0.0",
  "manifestVersion": "1.19",
  "id": "${{TEAMS_APP_ID}}",
  "name": {
    "short": "IFD-CPL-RAG-Py ${{APP_NAME_SUFFIX}}",
    "full": "Infodation's Copilot RAG (BotFramework-Python)"
  },
  "developer": {
    "name": "Infodation R&D team.",
    "websiteUrl": "https://infodation.com/",
    "privacyUrl": "https://infodation.com/",
    "termsOfUseUrl": "https://infodation.com/"
  },
  "description": {
    "short": "Infodation's Copilot RAG",
    "full": "Infodation's Copilot RAG (BotFramework-Python)"
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#FFFFFF",
  "staticTabs": [
    {
      "entityId": "conversations",
      "scopes": ["personal"]
    },
    {
      "entityId": "about",
      "scopes": ["personal"]
    }
  ],
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": ["personal", "team", "groupChat"],
      "isNotificationOnly": false,
      "supportsCalling": false,
      "supportsVideo": false,
      "supportsFiles": true
    }
  ],
  "validDomains": [],
  "showLoadingIndicator": true
}
